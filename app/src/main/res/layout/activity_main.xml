<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #26ade0"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/askButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"
        android:background="#3F51B5"
        android:text="Ask"
        android:textColor="#F8F7F7"
        android:textColorHint="#000000"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible" />

    <TextView
        android:id="@+id/msgText"
        android:layout_width="394dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="“Make everyday decisions easier!”"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_eightBall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/askButton"
        android:layout_below="@+id/msgText"
        android:layout_alignStart="@+id/askButton"
        android:layout_alignLeft="@+id/askButton"
        android:layout_alignEnd="@+id/msgText"
        android:layout_alignRight="@+id/msgText"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="168dp"
        app:srcCompat="@mipmap/ic_launcher_foreground" />
</RelativeLayout>
